doctype html
html(lang="en" ng-app="MonterailApp")
  head
    title= pageTitle
    script(type='text/javascript' src="vendor/js/angular.min.js")
    script(type='text/javascript' src="js/app.js")
    link(rel="stylesheet" type="text/css" href="style.css")
  body(ng-controller="QuestionsController")
    header.header
      .header--inner
        .header__left
          h1.entry-title Questions
          button.add-item(type="button")
        .header__right
          .qustions__filter.qustions__filter--type
            form(action="")
              .form-group
                label
                  input(
                    type="radio" 
                    name="radio-filter" 
                    value="my-shelf-questions"
                    checked=""
                  ) 
                  | My shelf
              .form-group
                label
                  input(
                    type="radio" 
                    name="radio-filter" 
                    value="all-questions"
                  ) 
                  | All questions
          .qustions__filter.qustions__filter--sorting
            span Sort by:
            button.active.text-button(type="button") recent
            | or
            button.text-button(type="button") hot  
        .clear
    .wrapper
      .wrapper--inner
        .question(ng-repeat="question in questions")
          .question__top
            .avatar-container
              img.author-avatar-img(
                alt="{{question.author.name}}" 
                src="{{question.author.avatar}}"
              )
            .question-header
              p 
                a.author-name(href="#") {{ question.author.name }}
                |  IS ASKING
              h2 {{question.title}}
          .question__bottom
            .question__bottom--left
              .qustion__bottom--blue
                .question__bottom__col.question__bottom__col--first 
                  p.activities_role asked
              .question__bottom--flex
                .question__bottom__col(ng-repeat="activities in question.user_involved")
                  img.author-avatar-img(
                    alt="{{activities.name}}" 
                    src="{{activities.avatar}}"
                  )
                  p.activities_role {{ activities.role }}
                .clear
            .question__bottom--right
              p 
                span {{question.discusions}} 
                | related discusions
              p 
                span {{question.peers}} 
                | peers involved
              p 
                span {{question.conversations}} 
                | conversations
        button.load-questions(type="button") load more questions
          
